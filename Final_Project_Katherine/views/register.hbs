<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>

</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" id="index-nav">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Movie Lovers - Register for New Account</span>
        </div>
    </nav>

    <div id="clear">
    </div>

    {{#unless useLogin}}
    <form id="registerForm">
        <h3>{{header}}</h3>
        <div id="clear-small"></div>
        <div class="mb-3">
            <label for="username" class="form-label">New User's name:</label><br>
            <input type="text" class="form-control" id="new_username" name="username"><br>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">New Password:</label><br>
            <input type="password" class="form-control" id="new_password" name="password"><br>
        </div>
        <input type="submit" class="btn btn-dark" value="Register">
        <button id="loginButton" class="btn btn-dark">Login</button>
    </form>
    {{/unless}}

    <div id="clear">
    </div>

    <script src="{{scriptPath}}"></script>
</body>

</html>