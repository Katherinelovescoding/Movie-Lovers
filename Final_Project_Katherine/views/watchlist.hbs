<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
    <script src="{{scriptPath}}"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" id="index-nav">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Movie Lovers {{title}} Details</span>
            <a href="/" class="btn btn-dark"> Back</a>

        </div>
    </nav>

    <div id="clear-small"></div>

    <div>
        <h2 style="font-weight: bold;">{{listName}}</h2>
        <table class="table table-hover">
            <tbody>
                {{#each movies}}
                <tr>
                    <td>
                        <img src="{{this.poster}}" alt="Movie Poster" width="100" height="150">
                    </td>
                    <td>
                        <p style="font-weight:bold;">{{this.movie_title}} ({{this.year}}) </p>
                    </td>
                    <td>
                        <p>{{this.director}}</p>
                    </td>
                    <td>
                        <p>{{this.imdb_id}}</p>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div id="clear-small"></div>

</body>

</html>